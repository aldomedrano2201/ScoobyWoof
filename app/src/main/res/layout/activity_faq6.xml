<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faq6Activity"
    android:background="@drawable/white_orange">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/scoobypaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textScooby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40sp"
        android:text="SCOOBY"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imgLogo"
        app:layout_constraintLeft_toRightOf="@id/imgLogo"/>

    <TextView
        android:id="@+id/textWoof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="55dp"
        android:text="WOOF"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imgLogo"
        app:layout_constraintLeft_toRightOf="@id/imgLogo"
        app:layout_constraintLeft_toLeftOf="@id/textScooby"/>


    <TextView
        android:id="@+id/textPaws1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Happy Paws Always"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/textWoof"
        app:layout_constraintLeft_toRightOf="@id/imgLogo"
        app:layout_constraintLeft_toLeftOf="@id/textScooby"/>

    <View
        android:id="@+id/lineSpace1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF9800"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"/>
    >
    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="How do I cancel a request?"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:textStyle="italic|bold"
        app:layout_constraintTop_toTopOf="@+id/lineSpace1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imgFaq6"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_marginTop="20sp"
        android:background="@color/black"
        android:src="@drawable/faq6"

        app:layout_constraintTop_toBottomOf="@id/textQuestion"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="1. Check the Support link at the bottom of tha page 'FAQ and Support'\n\n2.  Contact ScoobyWoof Costumer Service by phone or email or call the walker who you chose for the service directly.\n\n3.  If you want to contact the Walker, you can see his phone number on the profile. "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:textStyle="italic"

        app:layout_constraintTop_toBottomOf="@+id/imgFaq6"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btnBackToDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:alpha="0.9"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/icon_back"
        android:stateListAnimator="@null"
        android:text="."
        android:textAllCaps="false"
        android:inputType="phone"
        android:textSize="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        />




</androidx.constraintlayout.widget.ConstraintLayout>