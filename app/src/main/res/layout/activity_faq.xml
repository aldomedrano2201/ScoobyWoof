<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqActivity"
    android:background="@drawable/white_orange">

    <Button
        android:id="@+id/btnBackToDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:alpha="0.9"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/icon_back"
        android:stateListAnimator="@null"
        android:text="."
        android:textAllCaps="false"

        android:textSize="1sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/lblFaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10sp"
        android:text="FAQ and Support"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/btnBackToDashboard"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/lineSpace1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF9800"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackToDashboard"/>



    <TextView
        android:id="@+id/textFaq"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginEnd="20sp"
        android:text="Frequently Asked Questions "
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/lineSpace1"
        app:layout_constraintLeft_toLeftOf="@id/lineSpace1"/>



    <Button
        android:id="@+id/btnQuestion1"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:elevation="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stateListAnimator="@null"
        android:backgroundTint="#F6F4F3"
        android:text="How do I have a profile with more than one dog?"
        android:textColor="#0E0E0E"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"

        android:drawableRight="@drawable/icon_forward"
        android:gravity="left|center_vertical"
        android:alpha="0.9"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@id/textFaq"
        app:layout_constraintStart_toStartOf="@id/lineSpace1"
        app:layout_constraintEnd_toEndOf="@id/lineSpace1"
        />

    <Button
        android:id="@+id/btnQuestion2"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1sp"
        android:layout_marginRight="20dp"
        android:alpha="0.9"
        android:backgroundTint="#F6F4F3"
        android:drawableRight="@drawable/icon_forward"
        android:elevation="15dp"
        android:textStyle="italic"
        android:gravity="left|center_vertical"
        android:stateListAnimator="@null"
        android:text="How do I check the details of the walker without sending the request?"

        android:textAllCaps="false"

        android:textColor="#0E0E0E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/lineSpace1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/lineSpace1"
        app:layout_constraintTop_toBottomOf="@id/btnQuestion1" />

    <Button
        android:id="@+id/btnQuestion3"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:elevation="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stateListAnimator="@null"
        android:backgroundTint="#F6F4F3"
        android:text="How do I edit the details in my pet's profile?"
        android:textColor="#0E0E0E"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        android:drawableRight="@drawable/icon_forward"
        android:gravity="left|center_vertical"
        android:alpha="0.9"
        android:layout_marginTop="1sp"
        app:layout_constraintTop_toBottomOf="@id/btnQuestion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <Button
        android:id="@+id/btnQuestion4"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:elevation="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stateListAnimator="@null"
        android:backgroundTint="#F6F4F3"
        android:text="How do I contact the owner if there is an issue?"
        android:textColor="#0E0E0E"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        android:drawableRight="@drawable/icon_forward"
        android:gravity="left|center_vertical"
        android:alpha="0.9"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@id/btnQuestion3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnQuestion5"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:elevation="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stateListAnimator="@null"
        android:backgroundTint="#F6F4F3"
        android:text="How do I complain about a bad service?"
        android:textColor="#0E0E0E"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textSize="16sp"
        android:drawableRight="@drawable/icon_forward"
        android:gravity="left|center_vertical"
        android:alpha="0.9"
        android:layout_marginTop="1sp"
        app:layout_constraintTop_toBottomOf="@id/btnQuestion4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnQuestion6"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1sp"
        android:layout_marginRight="20dp"
        android:alpha="0.9"
        android:backgroundTint="#F6F4F3"
        android:drawableRight="@drawable/icon_forward"
        android:elevation="15dp"
        android:gravity="left|center_vertical"
        android:stateListAnimator="@null"
        android:text="How do I cancel a request?"
        android:textAllCaps="false"
        android:textColor="#0E0E0E"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnQuestion5" />

    <Button
        android:id="@+id/btnQuestion7"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1sp"
        android:layout_marginRight="20dp"
        android:alpha="0.9"
        android:backgroundTint="#F6F4F3"
        android:drawableRight="@drawable/icon_forward"
        android:elevation="15dp"
        android:gravity="left|center_vertical"
        android:stateListAnimator="@null"
        android:text="Support / Contact Us"
        android:textAllCaps="false"
        android:textColor="#0E0E0E"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnQuestion6" />

</androidx.constraintlayout.widget.ConstraintLayout>