<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsightsActivity"
    android:background="@drawable/white_orange">

        <Button
            android:id="@+id/btnBackToDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:alpha="0.9"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/icon_back"
            android:stateListAnimator="@null"
            android:text="."
            android:textAllCaps="false"

            android:textSize="1sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/lblInsights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10sp"
            android:text="Insights"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btnBackToDashboard"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/lineSpace1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF9800"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnBackToDashboard"/>



        <TextView
            android:id="@+id/textInsights"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:layout_marginEnd="20sp"
            android:text="BECOME YOUR DOG'S BEST BUDDY!"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/lineSpace1"
            app:layout_constraintLeft_toLeftOf="@id/lineSpace1"/>



        <Button
            android:id="@+id/btnInsights1"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:elevation="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:backgroundTint="#F6F4F3"
            android:text="What's the best pet food for your dog?"
            android:textColor="#0E0E0E"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="italic"
            android:drawableLeft="@drawable/petfood"

            android:drawableRight="@drawable/icon_forward"
            android:gravity="left|center_vertical"
            android:alpha="0.9"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/textInsights"
            app:layout_constraintStart_toStartOf="@id/lineSpace1"
            app:layout_constraintEnd_toEndOf="@id/lineSpace1"
            />

        <Button
            android:id="@+id/btnInsights2"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1sp"
            android:layout_marginRight="20dp"
            android:alpha="0.9"
            android:backgroundTint="#F6F4F3"
            android:drawableLeft="@drawable/petcare"
            android:drawableRight="@drawable/icon_forward"
            android:elevation="15dp"
            android:textStyle="italic"
            android:gravity="left|center_vertical"
            android:stateListAnimator="@null"
            android:text="Tips to take care of your dog"
            android:textAllCaps="false"
            android:textColor="#0E0E0E"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@id/lineSpace1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/lineSpace1"
            app:layout_constraintTop_toBottomOf="@id/btnInsights1" />

        <Button
            android:id="@+id/btnInsights3"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:elevation="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:backgroundTint="#F6F4F3"
            android:text="How often you should take out your dog for a walk?"
            android:textColor="#0E0E0E"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="italic"
            android:drawableLeft="@drawable/petwalk"
            android:drawableRight="@drawable/icon_forward"
            android:gravity="left|center_vertical"
            android:alpha="0.9"
            android:layout_marginTop="1sp"
            app:layout_constraintTop_toBottomOf="@id/btnInsights2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <Button
            android:id="@+id/btnInsights4"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:elevation="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:backgroundTint="#F6F4F3"
            android:text="Fun games to play with your buddy"
            android:textColor="#0E0E0E"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="italic"

            android:drawableLeft="@drawable/petgames"
            android:drawableRight="@drawable/icon_forward"
            android:gravity="left|center_vertical"
            android:alpha="0.9"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/btnInsights3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

