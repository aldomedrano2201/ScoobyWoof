<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainExtraInfoOwnerActivity">

    <LinearLayout android:orientation="vertical" android:background="@drawable/dogautumn_sec" android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="230dp"
                android:src="@drawable/cute_dog" />

            <ImageView
                android:layout_width="140sp"
                android:layout_height="140sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/scoobypaw" />

            <TextView
                android:id="@+id/textScooby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="40sp"
                android:text="SCOOBY"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textWoof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="70dp"
                android:text="WOOF"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textPaws1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="110dp"
                android:text="Happy Paws Always"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textBenefitsWalker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="190dp"
                android:text="Why trust in Scooby Woof?"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:textStyle="italic|bold"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textBenefitsParagraph"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="530sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/white_orange3"
                android:text="We are recommended by known professional pet sitting networks, such as:\n - National Association of Professional Pet Sitters (NAPPS)\n - Care.com\n - Pet Sitters International (PSI)"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


            <TextView
                android:id="@+id/textWoof84"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="780dp"
                android:layout_marginRight="10dp"
                android:text="Read verified reviews by dog owners like you and choose a walker who’s a great match for you and your pet.\n\nNo cash or checks needed—we make it simple to book and make secured payments through our website or app.\n\nYour pets are in great hands with a loving sitter. Plus, your booking is backed by 24/7 support and the ScoobyWoof Guarantee."
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="italic" />


            <ImageView

                android:layout_width="68sp"
                android:layout_height="70sp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="780dp"
                android:src="@drawable/lupa1" />

            <ImageView

                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="880dp"
                android:src="@drawable/paymenticon" />

            <ImageView

                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1010dp"
                android:src="@drawable/secicon" />

            <View
                android:id="@+id/lineSpace1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF9800"
                android:layout_marginTop="1285dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/footer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1300dp"
                android:layout_marginRight="10dp"
                android:text="2000 Saint-Catherine St W, Montreal, Quebec H3H 2T2 \n\n\n\n ScoobyWoof Inc. \n 2023"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>